@using PlantShop.Areas.Admin.ViewModels.ShoppingVM;
@model CreateShoppingVM
<div class="card">
    <div class="card-body">
        <div class="card-title">Add CategoryComponent</div>
        <hr>
        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="Shopping" asp-area="admin">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>



            <div class="form-group">
                <label asp-for="FormFile"></label>
                <input asp-for="FormFile" class="form-control">
                <span class="text-danger" asp-validation-for="FormFile"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-light px-5">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")

    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

    <script>

        CKEDITOR.replace('Description');
    </script>
}
