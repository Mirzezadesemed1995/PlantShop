@using PlantShop.Areas.Admin.ViewModels.FooterVM
@model UpdateFooterVM;
<div class="card">
    <div class="card-body">
        <div class="card-title">Add CategoryComponent</div>
        <hr>
        <form enctype="multipart/form-data" method="post" asp-action="update" asp-route-id="@Model.Id" asp-controller="Footert" asp-area="admin">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress"></label>
                <textarea asp-for="Adress" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Adress"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <textarea asp-for="Email" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <textarea asp-for="Phone" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>



          

            <div class="form-group">
                <button class="btn btn-light px-5">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")

    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

    <script>

        CKEDITOR.replace('Description');
    </script>
}
