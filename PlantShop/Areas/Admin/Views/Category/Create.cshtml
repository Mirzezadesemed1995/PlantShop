@using PlantShop.Areas.Admin.ViewModels.CategoryVM


@model CreateCategoryVM
<div class="card">
    <div class="card-body">
        <div class="card-title">Add CategoryComponent</div>
        <hr>
        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="category" asp-area="admin">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            



            <div class="form-group">
                <label asp-for="formFile"></label>
                <input asp-for="formFile" class="form-control">
                <span class="text-danger" asp-validation-for="formFile"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-light px-5">Submit</button>
            </div>
        </form>
    </div>
</div>

